



<div class="banner banner-index new_tra_ba" id="show_trainer_ban" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%=image_path "training.jpeg"%>);">






  <div class="trainer_details">
    <div class="grid">
      <div class="card response name-tra">
        <h3 class="properties">Trainer's Name</h3>
        <p id="booking_info"><%=@trainer.first_name=%> <%=@trainer.last_name=%></p>
      </div>



      <div class="card2 response age-tra">
        <h3 class="properties">Age and Gender</h3>
        <p><%=@trainer.age=%> - <%=@trainer.gender=%></p>
      </div>





      <div class="card2 response email1">
        <h3 class="properties " id="more2">Email</h3>
        <p><%=@trainer.user.email=%></p>
      </div>



      <div class="card2 response address-tra">
        <h3 class="properties" id="more1">Address</h3>
        <p><%=@trainer.address=%></p>
      </div>

      <div class="card2 response photo" style="background-image: url(<%=@trainer.photo%>)">
        <h3 class="properties" id="more1"></h3>
      </div>


      <div class="card2 response expertise1">
        <h3 class="properties" id="more1">Session</h3>
        <p><%=@expertise.name%></p>
      </div>


      <div class="card2 response rate-tra">
        <h3 class="properties" id="more1">Rate</h3>
        <p><%=@trainer.hourly_rate%> ils</p>
      </div>











    </div>
  </div>
</div>
<div class="row" id="linksrow">
  <center><div class="links">
    <div class="col-xs-12 col-lg-4">
      <div class="btn-default"><%= link_to "Back to all trainers", trainers_path%></div>
    </div>
    <div class="col-xs-12 col-lg-4">
      <div class="btn-default"><%= link_to "book this training session",new_trainer_booking_path(@trainer)%></div>
    </div>
    <div class="col-xs-12 col-lg-4">
      <div class="btn-default"><%= link_to "show reviews",trainer_review_path(@trainer)%></div>
    </div>
  </div>
</center>
</div>
























