<div class="banner banner-index new_tra_ba" id="show_trainer_ban" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%=image_path "training.jpeg"%>);">
  <div class="container trainer_details">
    <div class="row">
      <div class="col-md-3 col-md-offset-2">
        <div class="new_card">
        <h3 class="properties">Trainer's Name</h3>
        <p id="booking_info"><%=@trainer.first_name=%> <%=@trainer.last_name=%></p>
      

        <h3 class="properties" id="more1">Session</h3>
        <p><%=@expertise.name%></p>

        <h3 class="properties" id="more1">Address</h3>
        <p><%=@trainer.address=%></p>
      </div>
      </div>
      <div class="col-xs-3">
        <div class="new_card">


        <h3 class="properties " id="more2">Email</h3>
        <p><%=@trainer.user.email=%></p>

        <h3 class="properties">Age and Gender</h3>
        <p><%=@trainer.age=%> - <%=@trainer.gender=%></p>

        <h3 class="properties" id="more1">Rate</h3>
        <p><%=@trainer.hourly_rate%> ils</p>
        </div>
      </div>

      <div class="col-md-4 col-xs-12">
       <div class="new_card">
        <div class="trainer-img" style="background-image: url(<%=@trainer.photo%>)">
          <h3 class="properties" id="more1"></h3>
        </div>
       </div>
      </div>

    </div>
    <div class="row">
      <div class="col-xs-3 col-md-offset-2"> 
      <div class="new_card"> 
        <%= link_to "book now",new_trainer_booking_path(@trainer)%>
      </div>
      </div>
      <div class="col-xs-4 col-md-offset-3">
        <div class="new_card">

        <div class="show_rev"><%= link_to "show reviews",trainer_review_path(@trainer)%></div>
          </div>
         </div>
      </div>
    </div>

<div class="cancel_back">
    <%if current_user %>
<%if @trainer.user_id == current_user.id %>
<%= link_to "cancel this offer", trainer_path(@trainer),method: 
:delete%>
<%end%>
<%end%>

  <%= link_to "Back to all trainers",
  trainers_path%>
</div>


</div>






  





































