<div id="index_tra_ban" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/414029/pexels-photo-414029.jpeg?cs=srgb&dl=adult-athlete-body-414029.jpg&fm=jpg');">
  <div class="banner-content">
   <center><h1 id="h1_home">Find your trainer</h1>
     <p>Become a healthier and a stronger person</p></center>      
     <div class="row all_trainers">
      <% @trainers.each do|trainer|  %>
      <div class="col-xs-6 col-lg-2">
       <div class="card1">
         <div class="image_link">          
          <div make_card_link>
            <%= link_to trainer_path(trainer) do %>
            <div class="card1" style="background-image:url(<%=cl_image_path "#{trainer.photo}"%>);">           
              <%=trainer.first_name%>
              <div class="agenda">
                <%=trainer.expertise.name%>
              </div>
            </div>
            <%end%>
          </div>         
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="become_trainer"><%= link_to "Become a trainer",  new_trainer_path, class: "navbar-wagon-item navbar-wagon-link" %> 
  </div>
  </div>
</div>
