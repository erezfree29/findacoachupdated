

<div class="banner banner-index" id="index_banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/414029/pexels-photo-414029.jpeg?cs=srgb&dl=adult-athlete-body-414029.jpg&fm=jpg');">

<div class="row">
  <div class="col-xs-12">



    <div class="create_training">
      <%= simple_form_for Trainer.new do |f| %>
      <p>enter an hourly rate</p>
      <%= f.input :hourly_rate, input_html: { min: 0 } %>

    </div>



  </div>
</div>
</div>


<div class="row" id="icons_row">
  <center>
    <div class="col-xs-4 col-lg-2 icon">
      <%= image_tag "medal.svg", height: 35 %>
    </div>
    <div class="col-xs-4 col-lg-2  icon">
      <%= image_tag "swimming-figure.svg", height: 35  %>
    </div>
    <div class="col-xs-4 col-lg-2  icon">
      <%= image_tag "running-man.svg", height: 35  %>
    </div>

    <div class="col-xs-4 col-lg-2  icon">
      <%= image_tag "basketball.svg", height: 35 %>
    </div>

    <div class="col-xs-4 col-lg-2  icon">
      <%= image_tag "stretching-exercises.svg", height: 35  %>
    </div>
    <div class="col-xs-4 col-lg-2 icon">
      <%= image_tag "bicycle.png", height: 35  %>
    </div>
  </center>
</div>



<center>
  <div class="booking_footer icon">
    <div class="col-xs-12 col-lg-2 col-lg-offset-0 icon">
      <%= image_tag "soccer-ball-variant.png", height: 35  %>
      <p>Practise makes perfect</p>
    </div>
  </div>
</center>


<div class="training_footer">
<p>enter category</p>
<%= f.collection_select(:expertise_id, Expertise.all, :id, :name ) %>
<%= f.button :submit, class: "btn btn-primary blue"%>
<% end %>
</div>

