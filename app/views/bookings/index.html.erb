  <div class="container">
  <div class="row my_bookings">
    <div style="display: flex; justify-content:center; align-items: center; ">
      <%counter = 0%>
      <%booking_number = 1%>
      <%flag = 0 %>
      <%@user_bookings.each do |booking|%>
         <%if (flag % 3) == 0%>
         <%if flag != 0   %>
